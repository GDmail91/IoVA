<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metroBackground">

    <LinearLayout
        android:id="@+id/notice_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_check"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/menu_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/forest_car"
            android:scaleType="fitStart"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bt_check"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/menu_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/bluetooth_btn"
        android:orientation="horizontal"
        android:onClick="checkBtStatus">
<!--
        <ImageView
            android:id="@+id/bt_check"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/bluetooth"
            android:scaleType="fitXY"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="블루투스 연결"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/bt_connect_sign"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/red_dot"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:id="@+id/driving_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/main_menu_border"
                android:orientation="vertical"
                android:onClick="onMenuClick">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/driving"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="운전하기"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/safe_score_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/main_menu_border"
                android:orientation="vertical"
                android:onClick="onMenuClick">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/score"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="안전지수"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/history_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/main_menu_border"
                android:orientation="vertical"
                android:onClick="onMenuClick">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/history"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="기록보기"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fb_logout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/main_menu_border"
                android:orientation="vertical"
                android:onClick="onMenuClick">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/setting"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="설정하기"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>